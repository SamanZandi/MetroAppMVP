<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke">

    <ImageView
        android:id="@+id/img_disconnect"
        android:layout_width="@dimen/_250dp"
        android:layout_height="@dimen/_250dp"
        android:src="@drawable/disconnect_internet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       app:tint="@color/bg_tajrish"
         />


    <TextView
        android:id="@+id/txt_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/fontfarsimed"
        android:text="@string/disconnect"
        android:textColor="@color/bg_tajrish"
        android:textSize="@dimen/_22sp"
        app:layout_constraintEnd_toEndOf="@+id/img_disconnect"
        app:layout_constraintStart_toStartOf="@+id/img_disconnect"
        app:layout_constraintTop_toBottomOf="@+id/img_disconnect" />



</androidx.constraintlayout.widget.ConstraintLayout>