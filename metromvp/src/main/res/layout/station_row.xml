<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130dp"
        app:cardElevation="@dimen/_2dp"
        tools:cardBackgroundColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_title_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toStartOf="@id/img_station"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                tools:text="تجریش"
                android:padding="@dimen/_5dp"
                android:fontFamily="@font/fontfarsimed"
                android:layout_marginEnd="@dimen/_5dp"
                app:layout_constraintEnd_toStartOf="@+id/img_station"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title_station_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_below="@id/txt_title_station"
                android:layout_toStartOf="@id/img_station"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                android:fontFamily="@font/abel"
                tools:text="tajrish"
                android:padding="@dimen/_5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_station"
                app:layout_constraintTop_toBottomOf="@id/txt_title_station" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_station"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_subway" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>